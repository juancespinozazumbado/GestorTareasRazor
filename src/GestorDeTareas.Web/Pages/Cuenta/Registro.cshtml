<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="max-width: 400px; width: 100%;">
        <!-- Top Image -->
        <div class="text-center">
            <img src="~/images/Tareas_logo.png" alt="Logo" class="mb-4" style="height: 60px;">
        </div>

        <!-- Registration Form -->
        <h3 class="text-center mb-4">Auto Gestion Tareas</h3>

        <form method="post">
            <div class="mb-3 position-relative">
                <label asp-for="Input.Email">Correo Electronico</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3 position-relative">
                <label asp-for="Input.Password">Contraseña</label>
                <input asp-for="Input.Password" type="password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3 position-relative">
                <label asp-for="Input.ConfirmPassword">Confirmar contraeña</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <div class="form-text"></div>
            </div>

            <button type="submit" class="btn btn-primary w-100">Registrarse</button>

        </form>

        <!-- Terms and Privacy Links -->
        <p class="text-center small mt-3">
            Si ya posee una cunenta puede <a asp-page="/Cuenta/Login">iniciar sescion  </a>.
        </p>
    </div>
</div>
