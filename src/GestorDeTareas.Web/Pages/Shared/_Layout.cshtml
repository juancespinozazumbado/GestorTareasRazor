@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestorDeTareas.Web</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico?v=3" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestorDeTareas.Web.styles.css" asp-append-version="true" />
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" />
</head>

<body>

    @if (SignInManager.IsSignedIn(User))
    {
        <div class="d-flex">
            <!-- Sidebar -->
            <aside id="sidebar" class="sidebar-toggle">
                <div class="sidebar-logo">
                    <a href="#">Tareas</a>
                    <img src="~/images/logo.png" alt="Logo" class="mb-4" style="height: 30px;" />
                </div>
                <!-- Sidebar Navigation -->
                <ul class="sidebar-nav p-0">
                    <li class="sidebar-header">
                        Tools & Components
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link">
                            <i class="lni lni-user"></i>
                            <span>Profile</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link">
                            <i class="lni lni-agenda"></i>
                            <span>Task</span>
                        </a>
                    </li>
                    <li class="sidebar-header">
                        Pages
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                           data-bs-target="#auth" aria-expanded="true" aria-controls="auth">
                            <i class="lni lni-protection"></i>
                            <span>Auth</span>
                        </a>
                        <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link">Login</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link">Register</a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link">
                            <i class="lni lni-popup"></i>
                            <span>Notification</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link">
                            <i class="lni lni-cog"></i>
                            <span>Setting</span>
                        </a>
                    </li>
                </ul>
                <!-- Sidebar Navigation Ends -->
                <div class="sidebar-footer">
                    <a href="#" class="sidebar-link" id="logout">
                        @Html.AntiForgeryToken()
                        <i class="lni lni-exit"></i>
                        <span>Salir</span>
                    </a>
                </div>
            </aside>



            <!-- Sidebar Ends -->
            <!-- Main Component -->
            <div class="main">
                <nav class="navbar navbar-expand">
                    <button class="toggler-btn" type="button">
                        <i class="lni lni-text-align-left"></i>
                    </button>
                </nav>
                <main class="p-3">
                    <div class="container-fluid">
                        <div class="mb-3 text-center">
                            @RenderBody()
                        </div>
                    </div>
                </main>
            </div>
        </div>
        }
        else
        {
            <main class="p-3">
                <div class="container-fluid">
                    <div class="mb-3 text-center">
                        @RenderBody()
                    </div>
                </div>
            </main>

            
        }






